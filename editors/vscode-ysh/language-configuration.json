{
  "comments": {
    "lineComment": "#"
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "\"", "close": "\"", "notIn": ["string", "comment"] },
    { "open": "'''", "close": "'''", "notIn": ["string", "comment"] },
    { "open": "\"\"\"", "close": "\"\"\"", "notIn": ["string", "comment"] },
    { "open": "$'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "r'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "$(", "close": ")", "notIn": ["string", "comment"] },
    { "open": "${", "close": "}", "notIn": ["string", "comment"] },
    { "open": "$[", "close": "]", "notIn": ["string", "comment"] }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["'", "'"],
    ["\"", "\""]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*#\\s*region\\b",
      "end": "^\\s*#\\s*endregion\\b"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(proc|func|if|elif|else|for|while|until|case|\\{)\\b.*$",
    "decreaseIndentPattern": "^\\s*(\\}|fi|done|esac)\\b.*$"
  },
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)"
}

